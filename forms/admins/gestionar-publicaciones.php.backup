// ----------------------------------------------------------------------------
// üìã OBTENER TODAS LAS PUBLICACIONES
// ----------------------------------------------------------------------------
// Esta consulta SQL obtiene todas las publicaciones con informaci√≥n relacionada

// ============================================================================
// üìå EXPLICACI√ìN DE LA CONSULTA SQL CON JOIN
// ============================================================================
// SELECT: Seleccionamos las columnas que queremos
// FROM publicaciones p: Tabla principal (p es un alias corto)
// LEFT JOIN: Une tablas relacionadas
//   - LEFT JOIN publicadores: Trae el nombre del publicador
//   - LEFT JOIN categorias: Trae el nombre de la categor√≠a
// ON: Condici√≥n para unir las tablas (por el ID)
// ORDER BY: Ordena los resultados (DESC = descendente, m√°s recientes primero)
$query = "SELECT 
    p.id,                           -- ID de la publicaci√≥n
    p.titulo,                       -- T√≠tulo de la publicaci√≥n
    p.estado,                       -- Estado (publicado, borrador, revision)
    p.tipo,                         -- Tipo de publicaci√≥n
    p.fecha_creacion,               -- Cu√°ndo se cre√≥
    p.vistas,                       -- Cu√°ntas veces se ha visto
    p.contenido,                    -- El contenido completo
    p.categoria_id,                 -- ID de la categor√≠a
    pub.nombre as publicador_nombre, -- Nombre del publicador (renombrado)
    pub.email as publicador_email,   -- Email del publicador
    c.nombre as categoria_nombre     -- Nombre de la categor√≠a
FROM publicaciones p
LEFT JOIN publicadores pub ON p.publicador_id = pub.id
LEFT JOIN categorias c ON p.categoria_id = c.id
ORDER BY p.fecha_creacion DESC";

// Ejecutamos la consulta
$result = $conn->query($query);

// ============================================================================
// üìå EXPLICACI√ìN DEL OPERADOR TERNARIO ? :
// ============================================================================
// El operador ternario es una forma corta de escribir if-else
// SINTAXIS: condici√≥n ? valor_si_verdadero : valor_si_falso
//
// EJEMPLO LARGO (if-else normal):
// if ($result) {
//     $publicaciones = $result->fetch_all(MYSQLI_ASSOC);
// } else {
//     $publicaciones = [];
// }
//
// EJEMPLO CORTO (operador ternario):
// $publicaciones = $result ? $result->fetch_all(MYSQLI_ASSOC) : [];
//
// EN ESTE CASO:
// - Si $result tiene datos, ejecuta fetch_all()
// - Si $result es null/false, devuelve un array vac√≠o []
$publicaciones = $result ? $result->fetch_all(MYSQLI_ASSOC) : [];

// ============================================================================
// üìå EXPLICACI√ìN DE fetch_all(MYSQLI_ASSOC)
// ============================================================================
// fetch_all() obtiene todas las filas del resultado
// MYSQLI_ASSOC indica que queremos un array asociativo (con nombres de columnas)
//
// EJEMPLO DEL RESULTADO:
// [
//     ['id' => 1, 'titulo' => 'Mi publicaci√≥n', 'estado' => 'publicado'],
//     ['id' => 2, 'titulo' => 'Otra publicaci√≥n', 'estado' => 'borrador']
// ]
//
// Si us√°ramos MYSQLI_NUM, ser√≠a con √≠ndices num√©ricos:
// [
//     [1, 'Mi publicaci√≥n', 'publicado'],
//     [2, 'Otra publicaci√≥n', 'borrador']
// ]
?>

