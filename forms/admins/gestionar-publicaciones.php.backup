    <script>
        // ====================================================================
        // JAVASCRIPT: INICIALIZACI√ìN Y FUNCIONES
        // ====================================================================
        
        // Inicializar AOS (Animate On Scroll)
        AOS.init({
            duration: 1000,  // Duraci√≥n de las animaciones en milisegundos
            once: true       // Las animaciones solo se ejecutan una vez
        });

        // Cerrar alertas al hacer clic en el bot√≥n X
        document.querySelectorAll('.close-btn').forEach(button => {
            button.addEventListener('click', function() {
                this.parentElement.style.display = 'none';
            });
        });

        // ====================================================================
        // FUNCI√ìN: filtrarPublicaciones
        // ====================================================================
        // Filtra las publicaciones por t√≠tulo mientras el usuario escribe
        function filtrarPublicaciones(termino) {
            // Obtenemos todas las filas de la tabla
            const filas = document.querySelectorAll('.fila-publicacion');
            
            // Convertimos el t√©rmino de b√∫squeda a min√∫sculas
            const busqueda = termino.toLowerCase();
            
            // Recorremos cada fila
            filas.forEach(fila => {
                // Obtenemos el t√≠tulo de la fila (est√° en data-titulo)
                const texto = fila.dataset.titulo;
                
                // Verificamos si el t√≠tulo incluye el t√©rmino de b√∫squeda
                if (texto.includes(busqueda)) {
                    fila.style.display = '';  // Mostramos la fila
                } else {
                    fila.style.display = 'none';  // Ocultamos la fila
                }
            });
        }

        // ====================================================================
        // FUNCI√ìN: filtrarPorEstado
        // ====================================================================
        // Filtra las publicaciones por estado
        function filtrarPorEstado(estado) {
            const filas = document.querySelectorAll('.fila-publicacion');
            
            filas.forEach(fila => {
                // Si no hay filtro (estado vac√≠o) o el estado coincide
                if (estado === '' || fila.dataset.estado === estado) {
                    fila.style.display = '';  // Mostramos la fila
                } else {
                    fila.style.display = 'none';  // Ocultamos la fila
                }
            });
        }

        // ====================================================================
        // FUNCI√ìN: filtrarPorCategoria
        // ====================================================================
        // Filtra las publicaciones por categor√≠a
        function filtrarPorCategoria(categoriaId) {
            const filas = document.querySelectorAll('.fila-publicacion');
            
            filas.forEach(fila => {
                // Si no hay filtro o la categor√≠a coincide
                if (categoriaId === '' || fila.dataset.categoria === categoriaId) {
                    fila.style.display = '';
                } else {
                    fila.style.display = 'none';
                }
            });
        }

        // ====================================================================
        // FUNCI√ìN: limpiarFiltros
        // ====================================================================
        // Limpia todos los filtros y muestra todas las publicaciones
        function limpiarFiltros() {
            // Limpiamos todos los selects
            document.querySelectorAll('select').forEach(select => select.value = '');
            
            // Limpiamos el campo de b√∫squeda
            document.querySelector('input[type="text"]').value = '';
            
            // Mostramos todas las filas
            document.querySelectorAll('.fila-publicacion').forEach(fila => fila.style.display = '');
        }
    </script>
